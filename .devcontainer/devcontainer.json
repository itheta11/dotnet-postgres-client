{
  "name": "ASP.NET Dev Container",
  "dockerFile": "Dockerfile",
  "context": "..",
  "runArgs": ["--init"],
  "forwardPorts": [5001, 5001],
  "postCreateCommand": "dotnet restore",
  "remoteUser": "vscode",

  // âœ… Enables full debugging support
  "customizations": {
    "vscode": {
      "settings": {
        "dotnet.defaultSolution": "PgClient/PgClient.csproj",
        "terminal.integrated.shell.linux": "/bin/bash",
        "omnisharp.useModernNet": true
      },
      "extensions": [
        "vscodevim.vim",
        "ms-dotnettools.csdevkit"
      ]
    }
  },

  // Mount local files for live editing
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached"
  ],

  // Automatically start debugging server
  "portsAttributes": {
    "5000": { "label": "HTTP" },
    "5001": { "label": "HTTPS" }
  }
}

