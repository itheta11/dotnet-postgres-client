{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug ASP.NET Core (Docker)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/PgClient/bin/Debug/net9.0/PgClient.dll",
      "args": [],
      "cwd": "${workspaceFolder}",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://+:5001;http://+:5000"
      },
      "sourceFileMap": {
        "/workspace": "${workspaceFolder}"
      }
    }
  ]
}
